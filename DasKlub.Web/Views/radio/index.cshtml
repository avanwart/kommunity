
@using DasKlub.Lib.BOL.DomainConnection
@using DasKlub.Lib.Operational
@using DasKlub.Lib.Resources
@using DasKlub.Lib.Values
@{
    ViewBag.Title = Messages.Radio;
}
 
<div class="row">
    <div class="span8">
        @{ Html.RenderPartial("_AdBanner728x90"); }
        <h2>@Messages.Radio
        </h2>
        <hr />

        @if (!Request.Browser.IsMobileDevice)
        {
            @Html.Raw(SiteDomain.GetSiteDomainValue(
                SiteEnums.SiteBrandType.RADIO,
                Utilities.GetCurrentLanguageCode()))
        }
        else
        {
            @Html.Raw(SiteDomain.GetSiteDomainValue(
                SiteEnums.SiteBrandType.RADIM,
                Utilities.GetCurrentLanguageCode()))
        }
    </div>
    <div class="span4">
        @{ Html.RenderPartial("_AdBanner160x600"); }
    </div>
</div>