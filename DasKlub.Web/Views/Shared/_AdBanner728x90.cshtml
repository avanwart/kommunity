@using DasKlub.Lib.BOL.DomainConnection
@using DasKlub.Lib.Operational
@using DasKlub.Lib.Values
@if (!HttpContext.Current.Request.Browser.IsMobileDevice)
{


    <!-- 728 x 90 -->
 if (!HttpContext.Current.Request.Browser.IsMobileDevice)
 {
     int randomID = Utilities.RandomNumber(1, 4);

     switch (randomID)
     {
         case 1:

             @Html.Raw(SiteDomain.GetSiteDomainValue(
                 SiteEnums.SiteBrandType.A7281,
                 Utilities.GetCurrentLanguageCode()))
             break;

         case 2:

             @Html.Raw(SiteDomain.GetSiteDomainValue(
              SiteEnums.SiteBrandType.A7282,
                 Utilities.GetCurrentLanguageCode()))
             break;

         default:


             @Html.Raw(SiteDomain.GetSiteDomainValue(
              SiteEnums.SiteBrandType.A7283,
                 Utilities.GetCurrentLanguageCode()))
             break;
     }
 }
}