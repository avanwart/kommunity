@using DasKlub.Lib.Resources

@{
    ViewBag.Title = Messages.RealLifeContacts;
}
<div class="row" >
    <div class="span8">
        @{ Html.RenderPartial("_AdBanner728x90"); }
        <h2>@ViewBag.UserName: @Messages.RealLifeContacts</h2>
        <hr />
        @if (ViewBag.UserName.ToLower() == User.Identity.Name.ToLower())
        {
            Html.RenderPartial("_myZoneMenu");
        }
        <img src="@Url.Content("~/content/images/userstatus/handprint.png")"
            />

        <br />

        @if (ViewBag.ContactsCount != null && Convert.ToInt32(ViewBag.ContactsCount) > 0)
        {
            <span>@Messages.Count:</span>
            <span>
            @Html.Raw(ViewBag.ContactsCount)</span>
        }
        else
        {
            <i>
                @Messages.NoResults</i>
        }

        @if (ViewBag.Contacts != null)
        {
            @Html.Raw(ViewBag.Contacts)
        }
 
       
    </div>

    <div class="span4">
        @{ Html.RenderPartial("_AdBanner160x600"); }
       
    </div>

</div>