@using DasKlub.Lib.BOL.DomainConnection
@using DasKlub.Lib.Configs
@using DasKlub.Lib.Operational
@using DasKlub.Lib.Resources
@using DasKlub.Lib.Values
@{
    ViewBag.Title = Messages.Contact;
}

<div class="row">

    <div class="span8">
        @{ Html.RenderPartial("_AdBanner728x90"); }    
        <h2>@Messages.Contact</h2>
        <hr />
        <div class="span2">
            <h4>@Messages.EMail</h4>
            <p><a href="mailto:@GeneralConfigs.SendToErrorEmail">@GeneralConfigs.SendToErrorEmail  </a></p>

            <hr />
       
 
            @if (!string.IsNullOrEmpty(GeneralConfigs.FacebookLink))
            {
                <p><a target="_blank" href="@GeneralConfigs.FacebookLink">Facebook</a></p>
            }
  

            @if (!string.IsNullOrEmpty(GeneralConfigs.YoutubeLink))
            {
                <p><a target="_blank" href="@GeneralConfigs.YoutubeLink">YouTube</a></p>
            }
 
  
            @if (!string.IsNullOrEmpty(GeneralConfigs.TwitterLink))
            {
                <p><a target="_blank" href="@GeneralConfigs.TwitterLink">Twitter</a></p>
            }
 
            <hr />
  

            <h4>@Messages.BusinessAddress</h4>
            <p><address>


                   @Html.Raw(SiteDomain.GetSiteDomainValue(
                       SiteEnums.SiteBrandType.ADDRS,
                       Utilities.GetCurrentLanguageCode()))



               </address></p>
       
        </div>

        <div class="span4">
 
            <h3>@GeneralConfigs.SiteName</h3>
        </div>

 
    </div>


    <div class="span4">
        @{ Html.RenderPartial("_AdBanner160x600"); }
    </div>
</div>