@using DasKlub.Lib.Operational
@using DasKlub.Lib.Resources

@using DasKlub.Web.Helpers
@model  DasKlub.Lib.BOL.PhotoItem
@{
    ViewBag.Title = Model.Title;
    ViewBag.ThumbIcon = Html.S3ContentPath(Model.FilePathThumb).ToString() ;
}
@{ Html.RenderPartial("_AdBanner728x90"); }
<div class="row">
    <div class="span8">
        @if (Model == null)
        {
            <b>@Messages.Deleted</b>
        }
        else
        {
            <h3>@Messages.Photos:  @Html.Raw(ViewBag.UserName)</h3>
            <div id="status_update_list">
                @Html.Raw(ViewBag.StatusUpdateList)
            </div>
        }
        @section _javascript {
            @{ Html.RenderPartial("_statusCommenting-js"); }
        }
    </div>
    <div class="span4">
     


        @if (ViewBag.PreviousPhoto != null)
        {
            <i>@Messages.PreviousPhoto</i>
            <ul class="photo_navs">
                @Html.Raw(ViewBag.PreviousPhoto.ToUnorderdListItem)
            </ul>
        }
                
        <br />
        
        @if (ViewBag.NextPhoto != null)
        {
            <i>@Messages.NextPhoto</i>
            <ul class="photo_navs">
                @Html.Raw(ViewBag.NextPhoto.ToUnorderdListItem)
            </ul>
        }
        <hr />
        @{ Html.RenderPartial("_AdBanner120x60"); }

 
              
          
         
    </div>
</div>