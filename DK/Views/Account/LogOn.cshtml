@model DasKlub.Models.LogOnModel
           @using Web.Helpers

@{
    ViewBag.Title = BootBaronLib.Resources.Messages.SignIn;
}
<div class="row">
<div class="span8">

@{Html.RenderPartial("_AdBanner"); }
<h2>@BootBaronLib.Resources.Messages.SignIn</h2>
    <hr />
<p>
     @Html.ActionLink(BootBaronLib.Resources.Messages.Register, "Register",null, new { @class = "btn" }) 
</p>



@Html.ValidationSummary(true, BootBaronLib.Resources.Messages.PleaseCorrectTheErrors)

@using (Html.BeginForm()) {
    
           @Html.QueryAsHiddenFields()

    <div>
        <fieldset>
            <legend>@BootBaronLib.Resources.Messages.AccountInformation
             </legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
              
            

                <label class="checkbox">
                  @Html.CheckBoxFor(m => m.RememberMe)
                               
                               
                                  @Html.LabelFor(m => m.RememberMe)
                                </label>


            </div>
            <br />
            <p>
                <button class="btn btn-success" type="submit">@BootBaronLib.Resources.Messages.SignIn</button>
            </p>
        </fieldset>
    </div>
    
         <a href="@Url.Content("~/account/forgotpassword")"> @BootBaronLib.Resources.Messages.ForgotYourPassword </a>
}
</div>
        <div class="span4">@{Html.RenderPartial("_AdBanner2"); }</div>

</div>

@section _javascript {
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}