@using BootBaronLib.Resources
@using DasKlub.Web.Helpers
@model DasKlub.Web.Models.LogOnModel

@{
    ViewBag.Title = Messages.SignIn;
}
<div class="row">
    <div class="span8">

        @{ Html.RenderPartial("_AdBanner"); }
        <h2>@Messages.SignIn</h2>
        <hr />
        <p>
            @Html.ActionLink(Messages.Register, "Register", null, new {@class = "btn"}) 
        </p>



        @Html.ValidationSummary(true, Messages.PleaseCorrectTheErrors)

        @using (Html.BeginForm())
        {
            @Html.QueryAsHiddenFields()

            <div>
                <fieldset>
                    <legend>@Messages.AccountInformation
                    </legend>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.UserName)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.Password)
                    </div>
                    <div class="editor-field">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>

                    <div class="editor-label">
              
            

                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                               
                               
                            @Html.LabelFor(m => m.RememberMe)
                        </label>


                    </div>
                    <br />
                    <p>
                        <button class="btn btn-success" type="submit">@Messages.SignIn</button>
                    </p>
                </fieldset>
            </div>

            <a href="@Url.Content("~/account/forgotpassword")"> @Messages.ForgotYourPassword </a>
        }
    </div>
    <div class="span4">@{ Html.RenderPartial("_AdBanner2"); }</div>

</div>

@section _javascript {
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"> </script>
    
    <script>
        $(document).ready(function() {
            $("#UserName").focus();
        });
    </script>
}