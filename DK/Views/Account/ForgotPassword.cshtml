@{
    ViewBag.Title = BootBaronLib.Resources.Messages.ForgotYourPassword;
    Layout = "~/Views/Shared/Site.cshtml";
}
<div class="row">

<div class="span8">


@{Html.RenderPartial("_AdBanner"); }


@if (ViewBag.Result != null)
{
    <div class="green">
    @Html.Raw(ViewBag.Result)
    </div>
}


<h2>@BootBaronLib.Resources.Messages.ForgotYourPassword</h2>

    <hr />
 
@using (Html.BeginForm()) {
    <div>
        <fieldset>
            
            <div class="editor-label">
            @BootBaronLib.Resources.Messages.EMail:
            </div>
            <div class="editor-field">
                @Html.TextBox("email")
            </div>
            <p>
                <input class="btn btn-success" type="submit" value="@BootBaronLib.Resources.Messages.PasswordReset" />
            </p>
        </fieldset>
    </div>

 
}


</div>


<div class="span4">

</div>

</div>